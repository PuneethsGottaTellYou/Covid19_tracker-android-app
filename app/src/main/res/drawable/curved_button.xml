<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#0CC559" />
            <gradient android:angle="-90" android:startColor="#0CC559" android:endColor="#0CC559"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="#0CC559" />
            <solid android:color="#53919A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#0CC559" />
            <gradient android:angle="-90" android:startColor="#0CC559" android:endColor="#00C853" />
        </shape>
    </item>
</selector>